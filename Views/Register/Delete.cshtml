@model DCTTECHNOLOGIES.Model.RegisterTbl

@{
    ViewBag.Title = "Delete";
}
<style>
    .CommonClass {
        background: linear-gradient(to right, #23074d, #cc5333); /* Gradient background */
        font-family: 'Arial', sans-serif;
    }

    .container {
        margin-top: 0px;
    }

    .row {
        display: flex;
        justify-content: space-between;
    }

    .col-6 {
        width: 48%;
    }

    .card {
        color: #fff;
        background-color: rgba(255, 255, 255, 0.1);
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        color: #fff;
        background-color: transparent;
        border-bottom: none;
        text-align: center;
        font-size: 24px;
        font-weight: bold;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.1);
        border: none;
        color: #fff;
    }

    .headQuery {
        display: flex;
        align-self: center;
    }

    label {
        display: block;
        margin: 15px 0 5px;
        align-items: center;
    }

    input, textarea {
        background-color: rgba(255, 255, 255, 0.1);
        border: none;
        color: #fff;
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
        align-items: center;
    }

    .btn-primary {
        background-color: #cc5333;
        border: none;
    }

    button {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-success {
        background-color: #28a745;
        color: #fff;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        margin-top: 10px;
    }
</style>
<link rel="stylesheet" href="~/Content/css/style.css" />
<link href="~/Content/css/index.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="CommonClass">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h3>Are you sure you want to delete this User?</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <div class="form-horizontal">
                                    <dl class="dl-horizontal">
                                        <dt>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </dt>

                                        <dd class="form-control">
                                            @Html.DisplayFor(model => model.Name)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Password)
                                        </dt>

                                        <dd class="form-control">
                                            @Html.DisplayFor(model => model.Password)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Gender)
                                        </dt>

                                        <dd class="form-control">
                                            @Html.DisplayFor(model => model.Gender)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.PhoneNumber)
                                        </dt>

                                        <dd class="form-control">
                                            @Html.DisplayFor(model => model.PhoneNumber)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Email)
                                        </dt>

                                        <dd class="form-control">
                                            @Html.DisplayFor(model => model.Email)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Address)
                                        </dt>

                                        <dd class="form-control">
                                            @Html.DisplayFor(model => model.Address)
                                        </dd>
                                        <div>
                                            <div class="col-md-offset-2 col-md-12">
                                                <input type="submit" class="btn btn-danger btn-block" value="Delete"/>
                                                <input type="submit" value="Cancel" class="btn btn-danger btn-block" />
                                                @Html.ActionLink("Back to List", "Index")
                                            </div>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


