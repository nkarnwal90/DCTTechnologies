@model IEnumerable<DCTTECHNOLOGIES.Model.QueriesTbl>

@{
    ViewBag.Title = "Index";
}
<style>
    .CommonClass {
        background: linear-gradient(to right, #23074d, #cc5333); /* Gradient background */
        font-family: 'Arial', sans-serif;
    }

    .container {
        margin-top: 0px;
    }

    .row {
        display: flex;
        justify-content: space-between;
    }

    .col-6 {
        width: 48%;
    }

    .card {
        color: #fff;
        background-color: rgba(255, 255, 255, 0.1);
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        color: #fff;
        background-color: transparent;
        border-bottom: none;
        text-align: center;
        font-size: 24px;
        font-weight: bold;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.1);
        border: none;
        color: #fff;
    }

    .headQuery {
        display: flex;
        align-self: center;
    }

    label {
        display: block;
        margin: 15px 0 5px;
        align-items: center;
    }

    input, textarea {
        background-color: rgba(255, 255, 255, 0.1);
        border: none;
        color: #fff;
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
        align-items: center;
    }

    .btn-primary {
        background-color: #cc5333;
        border: none;
    }

    button {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-success {
        background-color: #28a745;
        color: #fff;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        margin-top: 10px;
    }
</style>
<link rel="stylesheet" href="~/Content/css/style.css" />
<link href="~/Content/css/index.css" rel="stylesheet" />

<div class="CommonClass">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h2>List Of Queries</h2>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <div class="form-horizontal">
                                <p>
                                    @Html.ActionLink("Create New", "Create")
                                </p>
                                <table class="table">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Email)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PhoneNumber)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Address)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Comments)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.UploadFile)
                                        </th>
                                        <th></th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Comments)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UploadFile)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                            </td>
                                        </tr>
                                    }

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

